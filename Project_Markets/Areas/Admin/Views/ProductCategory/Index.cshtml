@model IEnumerable<Project_Markets.DTOs.Product.ProductCategoryDto>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"> دسته بندی محصولات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading panel-primary">
                لیست مقالات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a href="/Admin/ProductCategory/Create" class="btn btn-success" style="color:black">افزودن گروه محصولات</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover text-center" id="dataTables-example">
                            <thead style="font-size:16px;">
                                <tr>
                                    <th class="text-center">تصویر</th>
                                    <th class="text-center">عنوان</th>
                                    <th class="text-center">دستورات</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="/img/bg-img/@item.ImageProduct"
                                                 class="img-thumbnail shadow-sm rounded"
                                                 style="width:150px; height:100px; object-fit:cover;" />
                                        </td>
                                        <td class="align-middle">@item.GroupTitle</td>
                                        <td class="align-middle">
                                            <div class="d-flex justify-content-center">
                                                <a href="/Admin/ProductCategory/Edit/@item.Id" class="btn btn-warning btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-pencil-square"></i> ویرایش
                                                </a>
                                                <a href="/Admin/ProductCategory/Delete/@item.Id" class="btn btn-danger btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-trash"></i> حذف
                                                </a>
                                                <a href="/Admin/ProductCategory/Details/@item.Id" class="btn btn-info btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-eye"></i> جزئیات
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        @*<div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers text-center" id="dataTables-example_paginate">
                                    <ul class="pagination">

                                        @for (int i = 1; i <= Model.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/User?PageId=@i">@i</a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>*@
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<style>
    #dataTables-example th {
        text-align: center !important;
        vertical-align: middle;
    }
</style>

