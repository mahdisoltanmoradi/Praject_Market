@using Entities.Product
@model Project_Markets.DTOs.Product.ProductCategoryDto
@{
    ViewData["Title"] = "ویرایش دسته بندی محصولات";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش گروه محصولات</h1>
    </div>
</div>

@if (ViewBag.IsExist == true)
{
    <div class="alert alert-warning">
        <h4>این گروه محصول تکراری است!</h4>
    </div>
}

<form action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <!-- اطلاعات محصول -->
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات محصول
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="GroupTitle">عنوان گروه</label>
                        <input asp-for="GroupTitle" class="form-control" />
                        <span asp-validation-for="GroupTitle" class="text-danger"></span>
                    </div>
                    <input type="submit" value="ذخیره تغییرات" class="btn btn-success" />
                </div>
            </div>
        </div>

        <!-- تصویر محصول -->
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    تصویر گروه محصول
                </div>
                <div class="panel-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageProduct))
                    {
                        <img id="imgAvatar" src="/img/bg-img/@Model.ImageProduct" class="img-thumbnail shadow-sm mb-2" style="width:150px; height:100px; object-fit:cover;" />
                    }
                    else
                    {
                        <img id="imgAvatar" src="/img/bg-img/default.png" class="img-thumbnail shadow-sm mb-2" style="width:150px; height:100px; object-fit:cover;" />
                    }

                    <div class="form-group">
                        <label>انتخاب تصویر جدید</label>
                        <input type="file" asp-for="ImageFile" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#ImageFile").change(function () {
            readURL(this);
        });
    </script>
}
