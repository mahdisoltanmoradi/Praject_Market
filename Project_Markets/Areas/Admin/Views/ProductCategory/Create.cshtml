@using Entities.Product
@model Project_Markets.DTOs.Product.ProductCategoryDto
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن دسته بندی محصولات</h1>
    </div>
</div>

<form action="Create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات محصول
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="form-group">
                            <label asp-for="GroupTitle"></label>
                            <input asp-for="GroupTitle" class="form-control" />
                            <span asp-validation-for="GroupTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    تصویر محصول
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <img id="imgAvatar" class="thumbnail" src="/img/bg-img/" />
                    <div class="form-group">
                        <label>انتخاب تصویر</label>
                        <input type="file" asp-for="ImageFile">
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#ImageFile").change(function () {
            readURL(this);
        });
    </script>
}
