@using Entities.Product
@model Project_Markets.DTOs.Products.ProductDto
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش محصول</h1>
    </div>
</div>

<form action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات محصول
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="ProductTitle"></label>
                            <input asp-for="ProductTitle" class="form-control" />
                            <span asp-validation-for="ProductTitle" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="CategoryId"></label>
                            <select asp-for="CategoryId" asp-items="@(ViewData["GroupBlogs"] as SelectList)" class="form-control"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="ProductPrice"></label>
                            <input asp-for="ProductPrice" class="form-control" />
                            <span asp-validation-for="ProductPrice" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="DeleteProductPrice"></label>
                            <input asp-for="DeleteProductPrice" class="form-control" />
                            <span asp-validation-for="DeleteProductPrice" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="ProductCount"></label>
                            <input asp-for="ProductCount" class="form-control" />
                            <span asp-validation-for="ProductCount" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-4">
                            <label asp-for="ProductColor"></label>
                            <select asp-for="ProductColor" asp-items="Html.GetEnumSelectList<Color>()" class="form-control"></select>
                            <span asp-validation-for="ProductColor" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label asp-for="ProductSize"></label>
                            <select asp-for="ProductSize" asp-items="Html.GetEnumSelectList<Size>()" class="form-control"></select>
                            <span asp-validation-for="ProductSize" class="text-danger"></span>
                        </div>

                        <div class="form-check col-md-4">
                            <input asp-for="Status" class="form-check-input" />
                            <label asp-for="Status" class="form-check-label"></label>
                        </div>

                        <div class="form-check col-md-4">
                            <input asp-for="ShowInSlider" class="form-check-input" />
                            <label asp-for="ShowInSlider" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="Tags"></label>
                            <input asp-for="Tags" class="form-control" />
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label asp-for="ProductDescription"></label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <input type="submit" value="ویرایش اطلاعات" class="btn btn-success" />

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    تصاویر محصول
                </div>
                <div class="panel-body">
                    <!-- پیش‌نمایش تصاویر قبلی -->
                    <div id="previewImages" class="mb-2">
                        @if (Model.ProductImageName != null)
                        {
                            foreach (var img in Model.ProductImageName.Split(','))
                            {
                                <img src="/img/bg-img/@img" class="img-thumbnail mb-2" style="object-fit: cover; max-height: 200px; margin-right:5px;" />
                            }
                        }
                        else
                        {
                            <img id="imgAvatar" class="img-thumbnail w-100 mb-2" src="/img/default.png" style="object-fit: cover; max-height: 200px;" />
                        }
                    </div>

                    <!-- آپلود چند فایل جدید -->
                    <div class="form-group">
                        <label>انتخاب تصاویر جدید محصول</label>
                        <input type="file" asp-for="ImageFile" class="form-control" multiple>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImages(input) {
            const preview = document.getElementById('previewImages');
            preview.innerHTML = ""; // پاک کردن پیش‌نمایش قبلی

            if (input.files && input.files.length > 0) {
                Array.from(input.files).forEach(file => {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const img = document.createElement("img");
                        img.src = e.target.result;
                        img.className = "img-thumbnail mb-2";
                        img.style.maxHeight = "200px";
                        img.style.objectFit = "cover";
                        img.style.marginRight = "5px";
                        preview.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                });
            } else {
                // اگر فایل جدید انتخاب نشد، تصاویر قبلی را نمایش بده
                @if (Model.ProductImageName != null)
                {
                        foreach (var img in Model.ProductImageName.Split(','))
                        {
                                <text>
                                const oldImg = document.createElement("img");
                                oldImg.src = "/img/bg-img/@img";
                                oldImg.className = "img-thumbnail mb-2";
                                oldImg.style.maxHeight = "200px";
                                oldImg.style.objectFit = "cover";
                                oldImg.style.marginRight = "5px";
                                preview.appendChild(oldImg);
                                </text>
                        }
                }
                else
                {
                        <text>
                        const defaultImg = document.createElement("img");
                        defaultImg.src = "/img/default.png";
                        defaultImg.className = "img-thumbnail mb-2";
                        defaultImg.style.maxHeight = "200px";
                        defaultImg.style.objectFit = "cover";
                        preview.appendChild(defaultImg);
                        </text>
                }
            }
        }

        const fileInput = document.querySelector('input[asp-for="ImageFile"]');
        fileInput.addEventListener('change', function () {
            previewImages(this);
        });
    </script>
}
