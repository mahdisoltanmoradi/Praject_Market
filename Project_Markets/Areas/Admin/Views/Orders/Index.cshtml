@using Data.DTOs.Orders
@model IEnumerable<OrderDto>

@{
    ViewData["Title"] = "لیست سفارشات";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست سفارشات</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading panel-primary">
                سفارشات ثبت شده در سایت
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                        <table class="table table-striped table-bordered table-hover text-center" id="dataTables-example">
                            <thead style="font-size:16px">
                                <tr>
                                    <th class="text-center">شناسه</th>
                                    <th class="text-center">کاربر</th>
                                    <th class="text-center">تاریخ ثبت</th>
                                    <th class="text-center">مبلغ کل</th>
                                    <th class="text-center">وضعیت پرداخت</th>
                                    <th class="text-center">وضعیت سفارش</th>
                                    <th class="text-center">دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle">@item.Id</td>
                                        <td class="align-middle">@item.UserId</td>
                                        <td class="align-middle">@item.OrderDate.ToString("yyyy/MM/dd HH:mm")</td>
                                        <td class="align-middle">@item.TotalPrice.ToString("N0") تومان</td>
                                        <td class="align-middle">@item.PaymentStatus</td>
                                        <td class="align-middle">@item.OrderStatus</td>
                                        <td class="align-middle">
                                            <div class="d-flex justify-content-center">
                                                <a href="/Admin/Order/Details/@item.Id" class="btn btn-info btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-eye"></i> جزئیات
                                                </a>
                                                <a href="/Admin/Order/Delete/@item.Id" class="btn btn-danger btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-trash"></i> حذف
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #dataTables-example th {
        text-align: center !important;
        vertical-align: middle;
    }
</style>
