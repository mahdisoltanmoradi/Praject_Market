@model IEnumerable<Entities.Discount.Discount>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست تخفیفات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading panel-primary">
                لیست تخفیفات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a href="/Admin/Discount/Create" class="btn btn-outline btn-success">افزودن تخفیف جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام</th>
                                    <th>محصولات</th>
                                    <th>زمان شروع تخفیف</th>
                                    <th>زمان اتمام تخفیف</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Products</td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>
                                            <a href="/Admin/Blog/Edit/@item.Id" class="btn btn-outline-warning btn-sm">
                                                ویرایش
                                            </a>
                                            <a href="/Admin/Blog/Delete/@item.Id" class="btn btn-outline-danger btn-sm">
                                                حذف
                                            </a>
                                            <a href="/Admin/Blog/Details/@item.Id" class="btn btn-outline-info btn-sm">
                                                جزئیات
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @*<div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_paginate paging_simple_numbers text-center" id="dataTables-example_paginate">
                                        <ul class="pagination">

                                            @for (int i = 1; i <= Model.PageCount; i++)
                                            {
                                                <li class="paginate_button @((i==Model.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="/Admin/User?PageId=@i">@i</a>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>*@
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

