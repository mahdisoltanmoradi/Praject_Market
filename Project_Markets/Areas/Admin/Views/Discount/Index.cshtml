@using static Common.Utilities.Convertors.DateConvertor
@model IEnumerable<Entities.Discount.Discount>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست تخفیفات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading panel-primary">
                لیست تخفیفات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a href="/Admin/Discount/Create" class="btn btn-outline btn-success" style="color:black">افزودن تخفیف جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover text-center" id="dataTables-example">
                            <thead style="font-size:16px">
                                <tr>
                                    <th class="text-center">نام</th>
                                    <th class="text-center">محصولات</th>
                                    <th class="text-center">زمان شروع تخفیف</th>
                                    <th class="text-center">زمان اتمام تخفیف</th>
                                    <th class="text-center">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle">@item.Name</td>
                                        <td class="align-middle">@item.Products</td>
                                        <td class="align-middle">@(item.StartDate.HasValue? item.StartDate.Value.ToShamsi() : "")</td>
                                        <td class="align-middle">@(item.EndDate.HasValue? item.EndDate.Value.ToShamsi() : "")</td>
                                        <td class="align-middle">
                                            <div class="d-flex justify-content-center">
                                                <a href="/Admin/Discount/Edit/@item.Id" class="btn btn-warning btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-pencil-square"></i> ویرایش
                                                </a>
                                                <a href="/Admin/Discount/Delete/@item.Id" class="btn btn-danger btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-trash"></i> حذف
                                                </a>
                                                <a href="/Admin/Discount/Details/@item.Id" class="btn btn-info btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-eye"></i> جزئیات
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        @*<div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_paginate paging_simple_numbers text-center" id="dataTables-example_paginate">
                                        <ul class="pagination">

                                            @for (int i = 1; i <= Model.PageCount; i++)
                                            {
                                                <li class="paginate_button @((i==Model.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                    <a href="/Admin/User?PageId=@i">@i</a>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>*@
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<style>
    #dataTables-example th {
        text-align: center !important;
        vertical-align: middle;
    }
</style>
