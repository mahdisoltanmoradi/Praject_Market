@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h1 class="page-header">پیام‌های ارسالی</h1>
        </div>
    </div>

    <div class="row">
        <!-- Chat Panel -->
        <div class="col-lg-8 mb-3">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-primary text-white">
                    پشتیبانی سایت
                </div>
                <ul id="chatMessage" class="list-group list-group-flush card-body" style="height:400px; overflow-y:auto;">
                    <!-- پیام‌ها اینجا نمایش داده می‌شوند -->
                </ul>
                <div class="card-footer bg-light">
                    <form id="answerForm" class="d-flex gap-2">
                        <input id="answerText" type="text" placeholder="پاسخ خود را بنویسید"
                               class="form-control rounded-pill flex-grow-1" />
                        <button type="submit" class="btn btn-success rounded-pill px-4">ارسال پاسخ</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Room List -->
        <div class="col-lg-4 mb-3">
            <div class="card shadow-sm rounded">
                <div class="card-header bg-secondary text-white">
                    کاربران فعال
                </div>
                <div id="roomList" class="list-group list-group-flush" style="max-height:460px; overflow-y:auto;">
                    <!-- لیست کاربران اینجا -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/SupportSignalRService.js"></script>
}
