@model Project_Markets.DTOs.Blog.BlogDto
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن وبلاگ جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form action="Create" method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات وبلاگ
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان</label>
                        <input type="text" asp-for="BlogTitle" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>دسته بندی</label>
                        <select type="text" asp-for="Category_id" asp-items="@(ViewData["GroupBlogs"]as SelectList)" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label>متن</label>
                        <textarea rows="4" cols="50" type="text" asp-for="Text" class="form-control" style="height:200px"></textarea>
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    تصویر وبلاگ
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <img id="imgAvatar" class="thumbnail" src="/img/bg-img/" />
                    <div class="form-group">
                        <label>انتخاب تصویر</label>
                        <input type="file" asp-for="ImageBlog">
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>

        </div>

    </form>
</div>


@section Scripts
{
    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('#imgAvatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#ImageBlog").change(function() {
            readURL(this);
        });
    </script>
}
