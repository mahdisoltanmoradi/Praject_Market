@using Common.Utilities.Convertors
@model Data.DTOs.AdminViewModel.UserForAdminViewModel
@{
    ViewData["Title"] = "ListDeleteUsers";
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کاربران سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterUserName" class="form-control" placeholder="نام کاربری" />
                                </div>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterEmail" class="form-control" placeholder="ایمیل" />
                                </div>
                                <div class="col-sm-2 col-md-2">
                                    <button type="submit" class="btn btn-info">بگرد</button>
                                    <a class="btn btn-default btn-sm" href="/Admin/User">خالی</a>
                                </div>
                            </form>
                        </div>

                        <table class="table table-striped table-bordered table-hover text-center" id="dataTables-example">
                            <thead style="font-size:16px">
                                <tr>
                                    <th class="text-center">نام کاربری</th>
                                    <th class="text-center">ایمیل</th>
                                    <th class="text-center">وضعیت</th>
                                    <th class="text-center">تاریخ ثبت نام</th>
                                    <th class="text-center">دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td class="align-middle">@user</td>
                                        <td class="align-middle">@user.Email</td>
                                        <td class="align-middle">
                                            @if (user.IsActive)
                                            {
                                                <p class="text-success">فعال</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">غیر فعال</p>
                                            }
                                        </td>
                                        <td class="align-middle">@user.RegisterDate.ToShamsi()</td>
                                        <td class="align-middle">
                                            <div class="d-flex justify-content-center">
                                                <a href="/Admin/User/Edit/@user.Id" class="btn btn-warning btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-pencil-square"></i> ویرایش
                                                </a>
                                                <a href="/Admin/User/Delete/@user.Id" class="btn btn-danger btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-trash"></i> حذف
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers text-center" id="dataTables-example_paginate">
                                    <ul class="pagination">

                                        @for (int i = 1; i <= Model.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/User?PageId=@i">@i</a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


