@using Project_Markets.DTOs.Blog
@model BlogCategoryDto
@{
    ViewData["Title"] = "افزودن دسته بندی مقالات";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن وبلاگ جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@if (ViewBag.IsExist == true)
{
    <div class="alert-warning">
       <h3>این دسته بندی تکراری است...!</h3>
    </div>
}

<div class="row">
    <form action="Create" method="post">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    دسته بندی مقالات
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان</label>
                        <input type="text" asp-for="Title" class="form-control">
                    </div>

                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </form>
</div>


