@model IEnumerable<Entities.Role.Role>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست نقش ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نقش های سینما
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">


                        <div class="col-md-6" style="margin:10px 0;">
                            <a href="/Admin/Role/CreateRole" class="btn btn-outline btn-success" style="color:black">افزودن نقش جدید</a>
                        </div>


                        <table class="table table-striped table-bordered table-hover text-center" id="dataTables-example">
                            <thead style="font-size:16px">
                                <tr>
                                    <th class="text-center">عنوان نقش</th>
                                    <th class="text-center">دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td class="align-middle">@role.Name</td>
                                        <td class="align-middle">
                                            <div class="d-flex justify-content-center">
                                                <a href="/Admin/Role/Edit/@role.Id" class="btn btn-warning btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-pencil-square"></i> ویرایش
                                                </a>
                                                <a href="/Admin/Role/Delete/@role.Id" class="btn btn-danger btn-sm mx-1" style="color:black">
                                                    <i class="bi bi-trash"></i> حذف
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

