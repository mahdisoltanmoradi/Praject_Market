<div class="container-fluid mt-5 mt-lg-7 px-3 px-lg-5" style="margin:0px,200px">
	<div class="checkout-section shadow-sm rounded bg-white p-4 p-lg-5">
		<div class="checkout-section-content">
			<form method="post" asp-route="UserPanel/Address/AddNewAddress">
				<div class="row g-3">
					<!-- g-3 = فاصله بین فیلدها -->

					<div class="col-lg-6">
						<label class="form-label small text-muted">استان</label>
						<input type="text" class="form-control rounded-pill" asp-for="State" placeholder="مثال: تهران">
					</div>

					<div class="col-lg-6">
						<label class="form-label small text-muted">شهر</label>
						<input type="text" class="form-control rounded-pill" asp-for="City" placeholder="مثال: کرج">
					</div>

					<div class="col-lg-6">
						<label class="form-label small text-muted">کد پستی</label>
						<input type="text" class="form-control rounded-pill" asp-for="ZipCode" placeholder="مثال: 1234567890">
					</div>

					<div class="col-lg-6">
						<label class="form-label small text-muted">نام گیرنده</label>
						<input type="text" class="form-control rounded-pill" asp-for="ReciverName" placeholder="مثال: علی رضایی">
					</div>

					<div class="col-12">
						<label class="form-label small text-muted">آدرس کامل</label>
						<textarea asp-for="PostalAddress"
								  class="form-control rounded big-textarea"
								  placeholder="آدرس دقیق خود را وارد کنید..."></textarea>
					</div>


					<div class="col-12 text-center mt-3">
						<button type="submit" class="btn btn-primary px-4 rounded-pill shadow-sm">
							ذخیره تغییرات <i class="fa fa-save ms-1"></i>
						</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


<!-- Internet Connection Status-->
<div class="internet-connection-status" id="internetStatus"></div>
