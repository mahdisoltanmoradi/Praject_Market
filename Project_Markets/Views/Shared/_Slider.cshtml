@model IEnumerable<Entities.Product.Product>
@{
    List<Entities.Product.Product> Slider = ViewData["Slider"] as List<Entities.Product.Product>;
}
@if (Slider.Any())
{
    <div class="flash-sale-wrapper">
        <div class="container">
            <div class="section-heading d-flex align-items-center justify-content-between">
                <h6 class="ml-1">فروش فلش</h6><a class="btn btn-primary btn-sm" href="/flash-sale.html">مشاهده همه</a>
            </div>
            <!-- Flash Sale Slide-->
            <div class="flash-sale-slide owl-carousel">
                @foreach (var item in Slider)
                {
                    <!-- Single Flash Sale Card-->
                    <div class="card flash-sale-card">
                        <div class="card-body">
                            <a href="/Product/productInformation/@item.Id">
                                <img src="@(string.IsNullOrEmpty(item.ProductImageName) ? "/img/default.png" : $"/img/bg-img/{item.ProductImageName}")"
                                     class="img-fluid w-100 rounded" />
                                @* <img style="border-radius:10px" src="/ImageProductCategory/@item.ProductImageName" alt=""><span class="product-title">@item.ProductTitle</span> *@
                                <p class="sale-price">@item.ProductPrice تومان </p><span class="progress-title">تنها @item.ProductCount باقی مانده</span>
                                <!-- Progress Bar-->
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @item.ProductCount%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}


