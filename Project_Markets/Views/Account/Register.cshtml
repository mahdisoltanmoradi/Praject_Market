@model Data.DTOs.RegisterViewModel
@{
    ViewData["Title"] = "عضویت در سایت";
}

<!-- Preloader-->
<div class="preloader" id="preloader">
    <div class="spinner-grow text-secondary" role="status">
        <div class="sr-only">بارگذاری...</div>
    </div>
</div>
<!-- Login Wrapper Area-->
<div class="login-wrapper d-flex align-items-center justify-content-center text-center">
    <!-- Background Shape-->
    <div class="background-shape"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5">
                <img class="big-logo" src="img/core-img/logo-white.png" alt="">
                <!-- Register Form-->
                <div class="register-form mt-5 px-4">
                    <form action="Register" method="post">
                        <div class="form-group text-left mb-4">
                            <span>نام کاربری</span>
                            <label asp-for="UserName" for="Email"><i class="lni lni-user"></i></label>
                            <input asp-for="UserName" class="form-control" id="registerPassword" type="text" placeholder="name">
                            <span asp-validation-for="UserName" class="text-dark"></span>
                        </div>
                        <div class="form-group text-left mb-4">
                            <span>ایمیل</span>
                            <label asp-for="Email" for="Email"><i class="lni lni-user"></i></label>
                            <input asp-for="Email" class="form-control" id="registerPassword" type="email" placeholder="info@example.com">
                            <span asp-validation-for="Email" class="text-dark"></span>
                        </div>
                        <div class="form-group text-left mb-4">
                            <span>کلمه عبور</span>
                            <label asp-for="Password" for="password"><i class="lni lni-lock"></i></label>
                            <input asp-for="Password" class="input-psswd form-control" id="registerPassword" type="password" placeholder="********************">
                            <span asp-validation-for="Password" class="text-dark"></span>
                        </div>
                        <div class="form-group text-left mb-4">
                            <span>تکرار کلمه عبور</span>
                            <label asp-for="RePassword" for="password"><i class="lni lni-lock"></i></label>
                            <input asp-for="RePassword" class="input-psswd form-control" id="registerPassword" type="password" placeholder="********************">
                            <span asp-validation-for="RePassword" class="text-dark"></span>
                        </div>
                        <button class="btn btn-success btn-lg w-100" type="submit">ثبت نام</button>
                    </form>
                </div>
                <!-- Login Meta-->
                <div class="login-meta-data">
                    <p class="mt-3 mb-0">قبلاً حساب دارید؟ <a class="ml-1" href="Login">ورود</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
