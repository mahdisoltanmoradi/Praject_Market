@model Data.DTOs.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}

<!-- Preloader-->
<div class="preloader" id="preloader">
    <div class="spinner-grow text-secondary" role="status">
        <div class="sr-only">بارگذاری...</div>
    </div>
</div>
<!-- Login Wrapper Area-->
<div class="login-wrapper d-flex align-items-center justify-content-center text-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-9 col-md-7 col-lg-6 col-xl-5">
                <img class="big-logo" src="img/core-img/logo-white.png" alt="">
                <!-- Register Form-->
                <div class="register-form mt-5 px-4">
                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-group text-left mb-4">
                            <span>ایمیل یا نام کاربری</span>
                            <label asp-for="Email"><i class="lni lni-user"></i></label>
                            <input asp-for="Email" class="form-control" id="email" type="text" placeholder="ایمیل">
                            <span asp-validation-for="Email" class="text-dark"></span>
                        </div>
                        <button class="btn btn-warning btn-lg w-100" type="submit">بازنشانی گذرواژه</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

